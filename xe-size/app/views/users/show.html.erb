<%= link_to "Back", trainers_path %>

<div class="row">
  <hr/>
  <div class="small-12 medium-6 large-6 columns profile">
    <%= image_tag @user.avatar.large.url %>
  </div>
  <div class="small-12 medium-6 large-6 columns">
    <h1 class="text-center"><%= @user.username %></h1><hr>
    <div class="small-12 medium-12 large-12 panel">
      <h5 class="text-center"><%= @user.first_name %></h5>
      <h5 class="text-center"><%= @user.last_name %></h5>
      <h6 class="subheader text-center"><%= @user.email %></h6>
    </div>
  </div>
  <div class="row">
    <hr/>
    <div class="large-12 columns">
      <% if @user.role == "client" %>
        <% if current_user.role == "trainer" %>
          <% if current_user.voted_up_on? @user %>
            <%= link_to "Finish Job", completed_user_path(@user), method: :put %>
          <% else %>
            <%= link_to "Add as Client", hired_user_path(@user), method: :put %>
          <% end %>
        <% end %>
      <% end %>
      <% if @user.role == "client" %>
        <h4>Current Trainers:</h4>
          <ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-6">
            <% @user.get_upvotes.voters.each do |trainer| %>
            <li>
              <%= link_to trainer.username, trainer %>
              </h6>
                <%= image_tag trainer.avatar.url(:thumb) %>
            <% end %>
            </li>
          </ul>
      <% end %>
      <% if @user.role == "trainer" %>
        <h4>Current Clients:</h4>
          <ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-6">
            <% @user.find_up_voted_items.each do |client| %>
            <li>
              <h6 class="text-center">
                <%= link_to client.username, client %>
              </h6>
                <%= image_tag client.avatar.url(:thumb) %>
              <% end %>
            </li>
          </ul>
      <% end %>
    </div>
    <hr>
    <div class="large-6 columns">
      <% if @user.role == "trainer" %>
        <h4>Previous Clients:</h4>
        <ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-6">
          <% @user.find_down_voted_items.each do |client| %>
        <li>
         <h6 class="text-center"><%= link_to client.username, client %></h6>
         <%= image_tag client.avatar.url(:thumb) %>
         <% end %>
       </li>
      </ul>
     <% end %>
    </div>
  </div>

  <% if @user.role == "trainer"%>
    <% if @user.voted_up_on? current_user %>
    <hr>
      <div class="row">
        <div class="large-6 columns">
          <h4>Routines</h4>
          <ul>
            <% @user.routines.each do |routine| %>
              <li><%= link_to routine.title, routine %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
