<%= link_to "Back", trainers_path %>

<div class="row">
  <hr/>
  <div class="small-10 large-6 columns profile">
    <%= image_tag @user.avatar.url(:detail) %>
  </div>
  <div class="small-12 large-6 columns">
    <h1><%= @user.username %></h1><hr>
  <div class="panel">
    <h5><%= @user.first_name %></h5>
    <h5><%= @user.last_name %></h5>
    <h6 class="subheader"><%= @user.email %></h6>
  </div>
  </div>

  <div class="row">
    <hr/>
    <div class="large-6 columns">
      <% if @user.role == "client" %>
        <% if current_user.role == "trainer" %>
          <% if current_user.voted_up_on? @user %>
            <%= link_to "Finish Job", completed_user_path(@user), method: :put %>
          <% else %>
            <%= link_to "Add as Client", hired_user_path(@user), method: :put %>
          <% end %>
        <% end %>
      <% end %>

      <% if @user.role == "client" %>
      <h4>Current Trainers:</h4>
      <ul>
        <% @user.get_upvotes.voters.each do |trainer| %>
        <%= link_to trainer.username, trainer %>
        <% end %>
      </ul>
      <% end %>
      <% if @user.role == "trainer" %>
      <h4>Current Clients:</h4>
      <ul>
        <% @user.find_up_voted_items.each do |client| %>
        <%= link_to client.username, client %>
        <% end %>
      </ul>
      <% end %>
    </div>
    <div class="large-6 columns">
      <% if @user.role == "trainer" %>
      <h4>Previous Clients:</h4>
      <ul>
        <% @user.find_down_voted_items.each do |client| %>
        <%= link_to client.username, client %>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
  <hr>
  <% if @user.role == "trainer"%>
    <% if @user.voted_up_on? current_user %>
      <div class="row">
        <div class="large-6 columns">
          <h4>Routines</h4>
          <ul>
            <% @user.routines.each do |routine| %>
              <li><%= link_to routine.title, routine %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
